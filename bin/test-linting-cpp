#!/usr/bin/env bash
set -u

source bin/lib/helpers.sh

CPP_FILES=${@:-$(git ls-files --no-deleted *.cpp)}
HPP_FILES=${@:-$(git ls-files --no-deleted *.hpp)}

function lint_check() {
  FILES=$1
  # xargs isn't playing nice and I'm not invested enough to solve that
  clang-tidy \
    --warnings-as-errors=* \
    ${FILES} \
    -- -std=c++17 \
    -I ./include/ \
    -I ./vendor/ \
    -I ./vendor/raylib/include/ \
    -I ./vendor/mruby/
}

log "Checking CPP for linting errors"
job_output=$(lint_check ${CPP_FILES} 2>&1)
barf_if_failed $?

log "Checking HPP for linting errors"
job_output=$(lint_check ${HPP_FILES} 2>&1)
barf_if_failed $?
