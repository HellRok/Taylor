#!/usr/bin/env bash
set -euo pipefail

source bin/lib/helpers.sh

export RUBY_FILES=$(git diff --cached --name-only --diff-filter MRA *.{rb,rake})
export XPP_FILES=$(git diff --cached --name-only --diff-filter MRA *.{cpp,hpp})

log "Checking documentation"
job_output=$(bin/test-documentation)
barf_if_failed $?

if [[ -n $RUBY_FILES ]]; then
  bin/test-formatting-ruby ${RUBY_FILES}
fi

if [[ -n $XPP_FILES ]]; then
  bin/test-formatting-cpp ${XPP_FILES}
  bin/test-linting-cpp ${XPP_FILES}
fi
