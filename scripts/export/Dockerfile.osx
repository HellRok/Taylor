FROM taylor/build-osx AS build_base
WORKDIR /app/export

COPY --from=taylor/export /usr/bin/taylor /app/mruby/bin/mrbc /usr/bin/
COPY --from=taylor/export /app/taylor /app/taylor
COPY . /app/export

ENV \
  USER_ID=1000 \
  GROUP_ID=1000 \
  EXPORT=osx \
  LANG=en_US.UTF-8 \
  LANGUAGE=en_US.UTF-8 \
  LC_ALL=en_US.UTF-8

CMD ["./entrypoint.sh"]
